<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <StackPanel>
        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <TextBox Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <TextBox Text="{Binding Time, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Button Content="click" Command="{Binding Click}"></Button>
    </StackPanel>
</Window>
